/* css for search */
$dark-primary-color = #512DA8
$primary-color = #673AB7
$light-primary = #FFFFFF
$text-icons = #D1C4E9
$accent-color = #536DFE
$primary-text = #212121
$secondary-text = #727272
$divider-color = #B6B6B6

my-search:focus
  outline-color transparent

.search-wrapper
  background-color rgb(63,81,181)
  position: relative;
  padding: 10px;

.search-wrapper 
  width: auto;

.search-wrapper:focus
  outline 0
  outline-color transparent

.search-box 
  color: black;
  width: 100%;
  height: 30px;
  font-size: 12px;
  border-radius: 15px;

.search-box:focus
  outline: 0;
  outline-color transparent


.close-icon 
  z-index 2
  position: absolute;
  color: black;
  border: 1px solid transparent;
  background-color: transparent;
  display: inline-block;
  right: 16px;
  top: 12px;
  vertical-align: middle;
  cursor: pointer;

.close-icon:focus
  outline 0
  outline-color transparent

.my-color-icon 
  color: #fff


.input-container-search
  padding 0
  font-size 14px

.input-container-search .md-input
  color $light-primary


md-input-container:not(.md-input-invalid).input-container-search .md-input
  border-color white
